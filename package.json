{
  "name": "bf-presenter",
  "version": "1.1.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dist:win:portable": "electron-builder --win portable",
    "dist:win:installer": "electron-builder --win nsis --x64",
    "dist:win:x64": "electron-builder --win nsis"
  },
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "26.0.12"
  },
  "build": {
    "appId": "com.beauchamp.presenter",
    "productName": "BF Presenter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.cjs",
      "ui/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
