{
  "name": "bf-presenter",
  "version": "1.1.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dist:win:portable": "electron-builder --win portable",
    "dist:win:x64": "electron-builder --win nsis"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "nz.bfh.presenter",
    "productName": "BF Presenter",
    "files": [
      "main.js",
      "preload.js",
      "ui/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "BFPresenter-Portable-${version}-${arch}.exe"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}