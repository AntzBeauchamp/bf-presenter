{
  "name": "bf-presenter",
  "version": "1.6.1",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "preclean:win": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"taskkill /IM 'BF Presenter.exe' /F 2>$null; taskkill /IM electron.exe /F 2>$null; taskkill /IM node.exe /F 2>$null\"",
    "dist:win:portable": "npm run preclean:win && electron-builder --win portable",
    "dist:win:zip": "npm run dist:win:portable && powershell -NoProfile -ExecutionPolicy Bypass -Command \"Compress-Archive -Path .\\release\\$env:npm_package_version\\win-unpacked\\* -DestinationPath .\\release\\$env:npm_package_version\\BF-Presenter-Portable.zip -Force\"",
    "dist:win:installer": "electron-builder --win nsis",
    "dist:win:dir": "npm run preclean:win && electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "26.0.12"
  },
  "build": {
    "appId": "nz.bf.presenter",
    "productName": "BF Presenter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "main.js",
      "preload.cjs",
      "preload.js",
      "ui/**/*",
      "package.json",
      "BF_presenter_icon.ico"
    ],
    "asarUnpack": [
      "dist-electron/preload.cjs",
      "preload.cjs"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "BF_presenter_icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
